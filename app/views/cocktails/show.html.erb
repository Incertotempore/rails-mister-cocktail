<h2><%= @cocktail.name %></h2>


<ul>
<% @cocktail.doses.each do |dose| %>
<li>  <%= dose.description  %> </li>
  <% if dose.ingredient.nil? %>
    <li>No ingredient</li>
  <%else  %>
<li>  <%= dose.ingredient.name %> </li>
  <% end %>
  <li><p><%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p></li>

<% end  %>
</ul>
